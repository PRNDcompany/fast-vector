{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
