{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "src/**/*.spec.ts",
    "FastVector.js",
    "FastVector.d.ts",
    "node_modules"
  ]
}
